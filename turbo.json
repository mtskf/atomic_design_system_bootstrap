{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "packages/**/dist/**",
        "packages/**/storybook-static/**"
      ]
    },
    "build-storybook": {
      "dependsOn": ["^build"],
      "outputs": ["packages/**/storybook-static/**"]
    },
    "dev": {
      "cache": false
    },
    "lint": {}
  }
}
